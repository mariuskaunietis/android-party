<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:src="@drawable/bg"/>


	<RelativeLayout
		android:id="@+id/loginProgressContainer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone">

		<ProgressBar
			android:id="@+id/loginProgress"
			android:layout_width="@dimen/login_progress_bar_size"
			android:layout_height="@dimen/login_progress_bar_size"
			android:layout_centerInParent="true"
			android:indeterminate="true"
			android:indeterminateTint="@android:color/white"/>

		<TextView
			android:id="@+id/loginProgressMessage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/loginProgress"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="@dimen/login_progress_message_margin_top"/>

	</RelativeLayout>


	<android.support.v4.widget.NestedScrollView
		android:id="@+id/loginForm"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:visibility="visible">

		<LinearLayout
			android:layout_width="@dimen/login_form_width"
			android:layout_height="match_parent"
			android:layout_gravity="center_horizontal"
			android:clipToPadding="false"
			android:gravity="center"
			android:orientation="vertical"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingEnd="@dimen/activity_horizontal_margin"
			android:paddingStart="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin">

			<ImageView
				android:layout_width="@dimen/login_form_logo_width"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/login_form_logo_margin_bottom"
				android:adjustViewBounds="true"
				android:src="@drawable/ic_logo_1"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:background="@drawable/bg_white_rounded"
				android:drawablePadding="8dp"
				android:drawableStart="@drawable/ic_username"
				android:hint="@string/login.form.username"
				android:imeOptions="actionNext"
				android:inputType="text"
				android:lines="1"
				android:padding="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:background="@drawable/bg_white_rounded"
				android:drawablePadding="8dp"
				android:drawableStart="@drawable/ic_lock"
				android:hint="@string/login.form.password"
				android:imeOptions="actionDone"
				android:inputType="textPassword"
				android:lines="1"
				android:padding="8dp"/>

			<Button
				android:id="@+id/loginFormLogin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:background="@drawable/bg_login_button"
				android:text="@string/login.form.login"
				android:textColor="@android:color/white"/>


		</LinearLayout>
	</android.support.v4.widget.NestedScrollView>
</FrameLayout>
